{
  "name": "@AnchorProtocol/ui",
  "version": "0.1.0",
  "description": "Anchor Protocol Design System - React components with Tailwind CSS",
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.cjs"
    },
    "./button": {
      "types": "./dist/src/components/button.d.ts",
      "import": "./dist/src/components/button.js",
      "require": "./dist/src/components/button.cjs"
    },
    "./card": {
      "types": "./dist/src/components/card.d.ts",
      "import": "./dist/src/components/card.js",
      "require": "./dist/src/components/card.cjs"
    },
    "./input": {
      "types": "./dist/src/components/input.d.ts",
      "import": "./dist/src/components/input.js",
      "require": "./dist/src/components/input.cjs"
    },
    "./styles/globals.css": "./src/styles/globals.css",
    "./styles/themes/*": "./src/styles/themes/*",
    "./tailwind.config": {
      "types": "./dist/tailwind.config.d.ts",
      "import": "./dist/tailwind.config.js",
      "require": "./dist/tailwind.config.cjs"
    },
    "./utils/cn": {
      "types": "./dist/src/utils/cn.d.ts",
      "import": "./dist/src/utils/cn.js",
      "require": "./dist/src/utils/cn.cjs"
    },
    "./layout": {
      "types": "./dist/src/components/layout/index.d.ts",
      "import": "./dist/src/components/layout/index.js",
      "require": "./dist/src/components/layout/index.cjs"
    }
  },
  "files": [
    "dist",
    "src/styles"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "lucide-react": ">=0.400.0",
    "next": ">=14.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "lucide-react": "^0.400.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.16",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "anchor",
    "bitcoin",
    "design-system",
    "react",
    "tailwindcss",
    "ui"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnchorProtocol/anchor.git",
    "directory": "libs/js/anchor-ui"
  }
}
