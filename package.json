{
  "private": true,
  "name": "anchor-monorepo",
  "description": "Anchor Protocol - Bitcoin-native applications platform",
  "workspaces": [
    "libs/js/anchor-ui",
    "libs/js/anchor-sdk",
    "dashboard/frontend",
    "apps/*/frontend",
    "sites/*"
  ],
  "scripts": {
    "build:ui": "npm run build -w @AnchorProtocol/ui",
    "dev:ui": "npm run dev -w @AnchorProtocol/ui",
    "build:sdk": "npm run build -w @AnchorProtocol/sdk",
    "build:all": "npm run build:ui && npm run build:sdk && npm run build --workspaces --if-present",
    "clean": "rm -rf node_modules && find . -name 'node_modules' -type d -prune -exec rm -rf {} +",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.4.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.28.0",
    "@rollup/rollup-linux-x64-musl": "^4.28.0",
    "@rollup/rollup-darwin-x64": "^4.28.0",
    "@rollup/rollup-darwin-arm64": "^4.28.0",
    "@rollup/rollup-win32-x64-msvc": "^4.28.0",
    "@next/swc-linux-x64-gnu": "15.5.9",
    "@next/swc-linux-x64-musl": "15.5.9",
    "@next/swc-darwin-x64": "15.5.9",
    "@next/swc-darwin-arm64": "15.5.9",
    "@next/swc-win32-x64-msvc": "15.5.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
